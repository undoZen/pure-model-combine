{
  "name": "vite-turborepo",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@6.27.1",
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel --continue",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@changesets/cli": "^2.23.0",
    "prettier": "^2.7.1",
    "turbo": "^1.2.16"
  }
}
